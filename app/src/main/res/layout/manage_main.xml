<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="#E6E6E6">

    <LinearLayout
        android:layout_width="221dp"
        android:layout_height="192dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="186dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_meb"
            android:layout_width="182dp"
            android:layout_height="149dp"
            android:layout_gravity="center"
            android:src="@drawable/mebicon" />

        <TextView
            android:id="@+id/tv_meb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="会员管理"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="221dp"
        android:layout_height="192dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="184dp"
        android:layout_marginTop="63dp"
        android:layout_marginEnd="6dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_dep"
            android:layout_width="182dp"
            android:layout_height="149dp"
            android:layout_gravity="center"
            android:src="@drawable/depicon" />

        <TextView
            android:id="@+id/tv_dep"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="部门管理"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="221dp"
        android:layout_height="192dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="2dp"
        android:layout_marginTop="321dp"
        android:layout_marginEnd="188dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_proj"
            android:layout_width="182dp"
            android:layout_height="149dp"
            android:layout_gravity="center"
            android:src="@drawable/projicon" />

        <TextView
            android:id="@+id/tv_proj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="项目管理"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="221dp"
        android:layout_height="192dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="189dp"
        android:layout_marginTop="320dp"
        android:layout_marginEnd="1dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_order"
            android:layout_width="182dp"
            android:layout_height="149dp"
            android:layout_gravity="center"
            android:src="@drawable/ordericon" />

        <TextView
            android:id="@+id/tv_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="订单管理"
            android:textSize="20dp"
            android:textStyle="bold" />
    </LinearLayout>

</RelativeLayout>